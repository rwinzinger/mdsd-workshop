package com.senacor.mdsd.hh.generator.greeter.generator

import org.eclipse.emf.ecore.resource.Resource
import org.eclipse.xtext.generator.IGenerator
import org.eclipse.xtext.generator.IFileSystemAccess
import com.senacor.mdsd.hh.generator.greeter.greeter.Greeting

/**
 * Generates code from your model files on save.
 * 
 * see http://www.eclipse.org/Xtext/documentation.html#TutorialCodeGeneration
 */
class GreeterGenerator implements IGenerator {
	
	override void doGenerate(Resource resource, IFileSystemAccess fsa) {
		for(g: resource.allContents.toIterable.filter(Greeting)) {
			fsa.generateFile(g.person.name+".txt", g.greetword+", "+g.person.fn+" "+g.person.ln)
		}
	}
}
