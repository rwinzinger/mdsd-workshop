grammar com.senacor.mdsd.hh.rest.service.Service with org.eclipse.xtext.common.Terminals

generate service "http://www.senacor.com/mdsd/hh/rest/service/Service"

Model:
	entities+=Entity*
	services+=Service*
;
	
// ========

Entity:
	'Entity' name=ID '{'
	  attrs+=Attribute*
	'}'
;

Attribute:
	type=TYPE name=ID';'
;

enum TYPE:
  INT='integer' |
  STR='string' |
  BOOL='boolean'
;

// ========

Service:
	'Service' name=ID '{'
	  desc=STRING
	  path=STRING
	  verb=VERB
	  type=[Entity]
	'}'
;
	
enum VERB:
  GET='GET' |
  PUT='PUT' |
  POST='POST'
;

// ========

Function:
	'Function' name=ID '{'
	  in=[Entity]|'nil'
	  out=[Entity]|'nil'
	  specification=STRING	
	'}'
;